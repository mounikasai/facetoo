<div class="gui of-hidden min-w-50 w-auto fluid-h flex column container" id="{{idPrefix}}-facet-container">
    <section class="gui h-auto gui-subheading-1 m-0 border-bottom light p-r-10 p-t-5 p-b-5 p-l-10">
        <button class="gui cursor-pointer expand-all" 
                aria-label="Expand All Filters">
            <i  class="gui-icon special rotate-left gui-icon-chevdouble"></i>
            Expand All
        </button>
        <button class="gui cursor-pointer collapse-all" 
                aria-label="Collapse All Filters">
            <i class="gui-icon special rotate-right gui-icon-chevdouble"></i>
            Collapse All
        </button>
    </section>
    <section class="gui border-bottom light p-r-10 p-t-5 p-b-5 p-l-10">
        <div class="gui gui-icon input fluid-w h-30">
            <input class="gui input fluid-w gui-subheading-2 filter-search-input"
                   placeholder="Search Filters. Shortcut Alt + F " />
            <i class="gui gui-icon gui-icon-search gui-hidden"></i>
        </div>
    </section>
    <ul class="gui fluid-h facet-list of-auto ofx-hidden m-0 p-0" 
        role="tree"
        aria-live="polite">
        {{> facet-pinned}}
        {{> facet-unpinned}}
    </ul>
</div>