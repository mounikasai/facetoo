<div class="gui fluid-h of-hidden">
    {{!--
    <h5 class="gui sub blue left floated header">Select Filters</h5> --}}
    <div class="gui m-5">
        <div class="gui left">
            <a class="gui cursor-pointer hide-facet">
                <i class="gui-icon gui-icon-chevron-left"></i>
                Hide
            </a>
        </div>
        <div class="gui right">
            <a class="gui cursor-pointer expand-all">
                <i class="gui-icon gui-icon-add"></i>
                Expand All
            </a>
            <a class="gui cursor-pointer m-l-10 collapse-all">
                <i class="gui-icon  gui-icon-minus"></i>
                Collapse All
            </a>
        </div>
    </div>
    <div class="gui clear"></div>
    <div class="gui input fluid-w p-t-5 p-r-5 p-b-5 p-l-1">
        <input class="gui input p-5 fluid-w gui-subheading-2 filter-search-input" placeholder="Search Filters" />
    </div>
    <div class="gui fluid-h facet-list of-auto">
        {{#each facets}}
        <div class="item facet-item" data-attr-name="{{name}}">
            <div class="content">
                <div class="facet-item-header fluid cursor-pointer gui selectable item">
                    <span class="gui gui-subheading-2 primary">
                        {{name}} {{{SelectedFiltersCount facetValues}}}
                    </span>
                    <i class="gui gui-icon gui-icon-chevron-down right m-r-10"></i>
                </div>
                <div class="clear"></div>
                <div class="description gui gui-hidden facet-item-description m-t-5">
                    <div class="gui fluid-w fluid-h m-0 p-0">
                        {{#each facetValues}} {{!--
                        <div class="gui item checkbox">
                            <input type="checkbox" id="{{label}}-{{@index}}" {{Checked selected}} {{Disabled disabled}} class="facet-value-checkbox cursor-pointer"
                                value="{{../id}}:{{label}}">
                            <label for="{{label}}-{{@index}}">{{label}} ({{count}})</label>
                        </div> --}}
                        <div class="item">
                            <input class="gui facet-value-checkbox cursor-pointer m-l-0" id="{{label}}-{{@index}}" {{Checked selected}} {{Disabled disabled}}
                                value="{{../id}}:{{label}}" type="checkbox" /> {{#if selected}}
                            <label class="gui cursor-pointer primary" for="{{label}}-{{@index}}">
                                {{label}}
                                <span class="gui-body-2">({{count}})</span>
                            </label>
                            {{else}}
                            <label class="gui cursor-pointer" for="{{label}}-{{@index}}">
                                {{label}}
                                <span class="gui-body-2">({{count}})</span>
                            </label>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>